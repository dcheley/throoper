  <% end %>
</div>

<div class='third'>
  <!-- Tweets -->
  <div class='center-wrap'>
    <p class='header'>TWITTER</p>
  </div>

    <%= link_to 'https://www.dexerto.com/news/esports-players-of-the-year-snakebite-halo/33773', class:'blog-link', target:'_blank' do %>
