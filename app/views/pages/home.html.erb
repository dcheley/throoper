<div class="container">
  <!-- Add a placeholder for the Twitch embed -->
  <div id="twitch-embed"></div>
</div>

<div class='third'>
  <div class='center-wrap'>
    <p class='header' style='margin-bottom: 30px;'>ABOUT</p>

    <%= image_tag('throop.jpg', class:'tiny-avatar') %>

    <p class='tiny-paragraph'>
      <b>Caster | Writer | Gamer</b>
    </p>

    <p class='tiny-paragraph'>
      Interested in connecting? <%= link_to 'Contact me', new_message_url %>
    </p>
  </div>
</div>

<div class='third'>
  <div class='center-wrap'>
    <p class='header'>RECENT</p>
  </div>

  <%= link_to 'https://www.dexerto.com/news/esports-players-of-the-year-snakebite-halo/33773', class:'blog-link', target:'_blank' do %>
